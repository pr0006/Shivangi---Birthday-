  <script>
    // Sparkles
    for (let i = 0; i < 50; i++) {
      let sparkle = document.createElement('div');
      sparkle.classList.add('sparkle');
      sparkle.style.left = Math.random() * 100 + 'vw';
      sparkle.style.animationDelay = Math.random() * 5 + 's';
      sparkle.style.animationDuration = 2 + Math.random() * 3 + 's';
      document.body.appendChild(sparkle);
    }

    // Balloons
    for (let i = 0; i < 15; i++) {
      let balloon = document.createElement('div');
      balloon.classList.add('balloon');
      balloon.style.left = Math.random() * 100 + 'vw';
      balloon.style.bottom = '-60px';
      balloon.style.animationDelay = Math.random() * 10 + 's';
      balloon.style.animationDuration = 6 + Math.random() * 6 + 's';
      document.body.appendChild(balloon);
    }

    // Heart click popup with typewriter effect
    function showPopup() {
      const popup = document.getElementById("popupMessage");
      const text = "â¤ï¸ I Love You Shivangi â¤ï¸";
      let i = 0;
      popup.innerHTML = "";
      popup.style.display = "block";

      function type() {
        if (i < text.length) {
          popup.innerHTML += text.charAt(i);
          i++;
          setTimeout(type, 100);
        } else {
          setTimeout(() => {
            popup.style.display = "none";
          }, 3000);
        }
      }

      type();
    }

    // Auto-play on first click/tap (for mobile support)
    document.addEventListener("click", () => {
      const audio = document.getElementById("birthdaySong");
      if (audio.paused) {
        audio.play().catch(() => {});
      }
    }, { once: true });
  </script>
